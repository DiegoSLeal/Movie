<resources>

    <style name="Theme.Movie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/red</item>
        <item name="android:navigationBarColor">@color/red</item>
    </style>

    <style name="Theme.Movie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Movie.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Movie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StyleScrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/track</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarFadeDuration">300</item>
    </style>


    <style name="StyleSearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/inox_400_Regular</item>
        <item name="android:editTextColor">@color/inox_400_Regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ubunturegular</item>
    </style>
</resources>